    "csso": "^5.0.5",
    "feed": "^5.2.0",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.8.0",
    "marked": "^17.0.1",
    "sharp": "^0.34.5",
    "terser": "^5.44.1"
