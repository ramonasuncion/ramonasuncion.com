  "scripts": {
    "clean": "rm -rf posts/*/ posts/index.json || true",
    "build": "npm run clean && node build.js",
    "lint:html": "html-validate 'index.html' 'about/' 'links/' 'blogroll/' 'posts/*/'",
    "purge:css": "purgecss --css assets/styles.css --content '*.html' 'about/*.html' 'links/*.html' 'blogroll/*.html' 'posts/*/*.html' 'assets/js/*.js' --output assets/",
    "format": "prettier --write '**/*.{js,html,css,json,md}'",
    "format:check": "prettier --check '**/*.{js,html,css,json,md}'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
